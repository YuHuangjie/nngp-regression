        "version": "0.2.0",
        "configurations": [
                {
                        "name": "Python: Current File",
                        "type": "python",
                        "request": "launch",
                        "program": "${file}",
                        "console": "integratedTerminal"
                },
                {
                        "name": "Python: NNGP",
                        "type": "python",
                        "request": "launch",
                        "program": "run_experiments_surface.py",
                        "console": "integratedTerminal",
                        "args": [
                                "--experiment_dir=./exp",
                                "--nonlinearity=relu",
                                "--depth=8",
                                "--weight_var=1",
                                "--bias_var=0.2",
                                "--n_gauss=501",
                                "--n_var=501",
                                "--n_corr=500",
                                "--max_gauss=10",
                                "--max_var=100",
                                "--l_pts=0.005",
                                "--l_dir=0.2",
                                "--gamma_pts=0.6",
                                "--gamma_dir=1.6",
                                "--radius=2e-2"
                        ],
                        "env": {
                                "CUDA_VISIBLE_DEVICES":"3"
                        },
                        "preLaunchTask": "make_library"
                }
        ]
}